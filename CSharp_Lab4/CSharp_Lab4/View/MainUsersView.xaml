<Window x:Class="CSharp_Lab4.View.MainUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSharp_Lab4.View"
             ResizeMode="NoResize"
             Title="MainUsersView" Height="650" Width="850"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:UserListView  Grid.Row="0"  Margin="10,57,9.6,27.4"/>

        <StatusBar Grid.Column="0"
                   VerticalAlignment="Bottom">
            <TextBlock Text="{Binding SelectedPerson}"></TextBlock>
        </StatusBar>

        <Label Content="User List" HorizontalAlignment="Left" VerticalAlignment="Top" Height="52" Width="227" FontFamily="Centure Ghotic" FontSize="45"/>



    </Grid>
</Window>
